{
    "compilerOptions": {
      "target": "ES6",                          
      "module": "commonjs",                    
      "lib": ["ES6","DOM", "ES2017", "ESNext"],                     
      "allowJs": true,
      "outDir": "dist",                          
      "rootDir": "src",
      "strict": false,
      "declaration": true,         
      "noImplicitAny": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules","src/**/*.test.ts"]
}